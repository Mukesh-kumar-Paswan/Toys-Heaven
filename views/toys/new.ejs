<% layout("./layouts/boilerplate.ejs") -%>
<div class="form-wrapper">
  <div class="form-card">
    <h1 class="form-title">Create New Toy</h1>

    <form action="/toys" method="POST">
      <div class="form-group">
        <label class="form-label" for="title">Toy Title</label>
        <input
          class="form-control"
          type="text"
          name="toy[title]"
          id="title"
          placeholder="e.g. Lego Star Wars"
          required
        />
      </div>

      <div class="form-group">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="toy[description]"
          id="description"
          placeholder="Describe the toy..."
          required
        ></textarea>
      </div>

      <div class="form-group">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="toy[image]"
          id="image"
          placeholder="https://..."
          required
        />
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem">
        <div class="form-group">
          <label class="form-label" for="price">Price (&#8377;)</label>
          <input
            class="form-control"
            type="number"
            name="toy[price]"
            id="price"
            placeholder="0"
            min="1"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label" for="category">Category</label>
          <select
            class="form-control"
            name="toy[category]"
            id="category"
            required
          >
            <option value="Educational">Educational</option>
            <option value="Action">Action</option>
            <option value="Puzzle">Puzzle</option>
            <option value="Soft Toy">Soft Toy</option>
            <option value="Vehicle">Vehicle</option>
            <option value="Others" selected>Others</option>
          </select>
        </div>
      </div>

      <button class="btn-submit">Add Toy to Collection</button>
    </form>
  </div>
</div>
